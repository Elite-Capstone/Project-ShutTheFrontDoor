<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_margin="@dimen/general_padding"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:scrollbarSize="@dimen/scrollbar_size">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="@dimen/scrollbar_size"
        app:cardCornerRadius="@dimen/activity_card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/general_padding"
            android:orientation="vertical"
            android:paddingStart="@dimen/general_padding">
            android:paddingStart="15dp"
            android:paddingLeft="@dimen/card_horizontal_padding"
            android:paddingTop="@dimen/card_vertical_padding"
            android:paddingRight="@dimen/card_horizontal_padding"
            android:paddingBottom="@dimen/card_vertical_padding">

            <TextView
                android:id="@+id/recentNotificationsNoActionsTitleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_vertical_padding"
                android:text="@string/title_notifications"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="@dimen/card_title_size" />

            <TextView
                android:id="@+id/notificationDescriptionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_vertical_padding"
                android:text="@string/random_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="@dimen/card_subtitle_size" />

            <TextView
                android:id="@+id/notificationBodyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_vertical_padding"
                android:paddingBottom="@dimen/card_vertical_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="@dimen/card_body_size" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>