<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="411dp"
        android:layout_height="652dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/general_padding"
                android:layout_marginRight="@dimen/general_padding"
                android:layout_marginTop="@dimen/help_padding"
                android:scrollbarSize="@dimen/scrollbar_size"
                app:cardCornerRadius="@dimen/activity_card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/general_padding"
                    android:paddingLeft="@dimen/general_padding"
                    android:paddingBottom="@dimen/general_padding"
                    android:paddingTop="@dimen/general_padding"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Welcome to DoorHub's help guide!\n\n
You can navigate to various tabs within the application using the bottom menu tab selection."
                        android:textSize="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/general_padding"
                android:layout_marginRight="@dimen/general_padding"
                android:layout_marginTop="@dimen/help_padding"
                android:scrollbarSize="@dimen/scrollbar_size"
                app:cardCornerRadius="@dimen/activity_card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/general_padding"
                    android:paddingLeft="@dimen/general_padding"
                    android:paddingBottom="@dimen/general_padding"
                    android:paddingTop="@dimen/general_padding"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp">


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Home Page: Here you can control the locking status of your door as well as use the live camera feed feature.\n\n
By clicking the &quot;lock/unlock&quot; button, you can change the state of your door.\n\n
By clicking the &quot;open stream&quot; button, you will be redirected to the live stream of your door."
                        android:textSize="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/general_padding"
                android:layout_marginRight="@dimen/general_padding"
                android:layout_marginTop="@dimen/help_padding"
                android:scrollbarSize="@dimen/scrollbar_size"
                app:cardCornerRadius="@dimen/activity_card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/general_padding"
                    android:paddingLeft="@dimen/general_padding"
                    android:paddingBottom="@dimen/general_padding"
                    android:paddingTop="@dimen/general_padding"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Notifications Page: Here you can view the notifications associated with your devices.\n\n
By clicking the &quot;peak&quot; button, on a recent notification, you will be redirected to the current live stream of your door.\n\n
By clicking the &quot;lock/unlock&quot; button, you can change the state of your door.\n\n
You can also swipe downward to refresh the page to check for new notifications Older notifications will not have the control buttons as stated above."
                        android:textSize="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/general_padding"
                android:layout_marginRight="@dimen/general_padding"
                android:layout_marginTop="@dimen/help_padding"
                android:scrollbarSize="@dimen/scrollbar_size"
                app:cardCornerRadius="@dimen/activity_card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/general_padding"
                    android:paddingLeft="@dimen/general_padding"
                    android:paddingBottom="@dimen/general_padding"
                    android:paddingTop="@dimen/general_padding"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Cloud Media Page: Here you will have access to the saved media files saved to your user account.\n\n
By clicking the download button, you will be able to save the media file to your device's local storage.\n\n
The user can view saved files as they wish.\n\n
You can also swipe downward to refresh the page to check for new media files."
                        android:textSize="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/general_padding"
                android:layout_marginRight="@dimen/general_padding"
                android:layout_marginTop="@dimen/help_padding"
                android:scrollbarSize="@dimen/scrollbar_size"
                app:cardCornerRadius="@dimen/activity_card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/general_padding"
                    android:paddingLeft="@dimen/general_padding"
                    android:paddingBottom="@dimen/general_padding"
                    android:paddingTop="@dimen/general_padding"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Settings Page: Here the user can view associated account information, as well as log out from the application."
                        android:textSize="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/general_padding"
                android:layout_marginRight="@dimen/general_padding"
                android:layout_marginTop="@dimen/help_padding"
                android:scrollbarSize="@dimen/scrollbar_size"
                app:cardCornerRadius="@dimen/activity_card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/general_padding"
                    android:paddingLeft="@dimen/general_padding"
                    android:paddingBottom="@dimen/general_padding"
                    android:paddingTop="@dimen/general_padding"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Stream Window: Here the user can view the live stream associated to their door.\n\n
This window can be accessed with the help of the notifications page or the home page."
                        android:textSize="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/general_padding"
                android:layout_marginRight="@dimen/general_padding"
                android:layout_marginTop="@dimen/help_padding"
                android:scrollbarSize="@dimen/scrollbar_size"
                app:cardCornerRadius="@dimen/activity_card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/general_padding"
                    android:paddingLeft="@dimen/general_padding"
                    android:paddingBottom="@dimen/general_padding"
                    android:paddingTop="@dimen/general_padding"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Login Pages: Here the user can log into their associated family account.\n\n
A user also has the option to make use of the &quot;Remember Me&quot; slider, to make logging in less tedious.\n\n
The user will be remembered until they decide to log out."
                        android:textSize="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/general_padding"
                android:layout_marginRight="@dimen/general_padding"
                android:layout_marginTop="@dimen/help_padding"
                android:scrollbarSize="@dimen/scrollbar_size"
                app:cardCornerRadius="@dimen/activity_card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/general_padding"
                    android:paddingLeft="@dimen/general_padding"
                    android:paddingBottom="@dimen/general_padding"
                    android:paddingTop="@dimen/general_padding"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Register Page: Here a user can sign up to the service and create an account by providing appropriate credentials."
                        android:textSize="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>